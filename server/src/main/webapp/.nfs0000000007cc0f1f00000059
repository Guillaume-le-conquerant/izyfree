	<script type="text/javascript">
		$('#login').hide();
		$('#inscription').hide();
		$('#inscription_entreprise').hide();
		$('.entreprise').hide();
		$('.depot_mission').hide();
		$('.proposition_profil').hide();
		$('.nos_missions').hide();
		$('.nos_offres').hide();
		$('#offre').hide();

		$(document).ready(
				function() {
                    
                    $('#freelance').click(function() {
						$('#inscription_entreprise').hide()
						$('#inscription_freelance').show()
					});
                    
                    $('#entreprise').click(function() {
						$('#inscription_freelance').hide()
						$('#inscription_entreprise').show()
					});

					$("#inscrire").click(function() {
						$('#login').hide()
                        $('.entete').hide()
                        $('#kesako').hide()
                        $('#nos_offres').hide()
                        $('.entreprise').hide()
                        $('#notre_motivation').hide()
                        $('#formulaire_entreprise').hide()
						$('#inscription').show()
					});

					$("#connexion").click(function() {
						$('#inscription').hide()
						$('#login').show()
					});

					$("#get").click(function() {
						getUser($('#user').val(), $('#alias').val())
					});

					$("#post").click(
							function() {
								postFreelance($('#name').val(), $('#firstname')
										.val(), $('#email').val(), $('#passwd')
										.val(), $('#nom_contact')
										.val(),$('#prenom_contact')
										.val(),$('#telephone')
										.val())
							}, console.log("Ok pour le post"));

					$("#list").click(function() {
						listFreelance()
					});

					$("#login").click(function() {
						login();
					});

					$("#profile").click(function() {
						profile()
					});
					$("#isentreprise").click(function() {
						$('.proposition_profil').hide();
                        $('.entete').hide();
						$('.nos_missions').hide();
						$('#inscription_entreprise').show();
						$('.entreprise').show();
						$('.depot_mission').show();
						$('.nos_offres').show();
						$('#offre').show();
					})
					$("#isfreelance").click(function() {
						$('#inscription_entreprise').hide();
						$('.entreprise').hide();
                        $('.entete').hide();
						$('.depot_mission').hide();
						$('.proposition_profil').show();
						$('.nos_missions').show();
						$('.nos_offres').show();
						$('#offre').show();
					})
				});
	</script>
