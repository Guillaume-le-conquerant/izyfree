	<script type="text/javascript">
		$('#login').hide();
		$('#inscription').hide();
		$('#formulaire_entreprise').hide();
		$('#offre').hide();
		$('#deconnexion').hide();
		$('#formulaire_moncompte').hide();

		$(document).ready(
				function() {

					list3lastFreelance();
					listMissions();

					$('#freelance').click(function() {
						$('#inscription_entreprise').hide()
						$('#inscription_freelance').show()
					});

					$('#entreprise').click(function() {
						$('#inscription_freelance').hide()
						$('#inscription_entreprise').show()
					});

					$('#accueil_logo').click(function() {
						$('#login').hide()
						$('.entete').show()
						$('#kesako').show()
						$('#nos_offres').show()
						$('.entreprise').show()
						$('#notre_motivation').show()
						$('#formulaire_freelance').hide()
						$('#formulaire_entreprise').hide()
						$('#inscription').hide()
					});

					$('#proposition').click(function() {
						$('#login').hide()
						$('.entete').hide()
						$('#kesako').hide()
						$('#nos_offres').hide()
						$('.entreprise').hide()
						$('#notre_motivation').hide()
						$('#formulaire_entreprise').hide()
						$('#dernieres_offres').hide();
						$('#formulaire_freelance').show()
					});

					$("#inscrire").click(function() {
						$('#login').hide()
						$('.entete').hide()
						$('#kesako').hide()
						$('#nos_offres').hide()
						$('#dernieres_offres').hide()
						$('#simplificateur').hide()
						$('#formulaire_freelance').hide()
						$('.entreprise').hide()
						$('#notre_motivation').hide()
						$('#formulaire_entreprise').hide()
						$('#inscription').show()
						$('#proposition_profil').hide()
						$('#proposition_mission').hide()
					});

					$("#connexion").click(function() {
						$('#inscription').hide()
						$('#login').hide()
						$('.entete').hide()
						$('#kesako').hide()
						$('#nos_offres').hide()
						$('.entreprise').hide()
						$('#notre_motivation').hide()
						$('#formulaire_entreprise').hide()
						$('#login').show()
					});

					$("#envoyer_freelance").click(
							function() {
								postFreelanceForm($('#nom_freelance').val(), $(
										'#prenom_freelance').val(), $(
										'#mail_freelance').val(), $(
										'#metier_freelance').val(), $(
										'#skills_freelance').val(), $(
										'#ville_freelance').val(), $(
										'#tel_freelance').val(), $(
										'#libre_freelance').val(), $(
										'#condition_freelance').val(), $(
										'#prix_freelance').val())
							});

					$("#post").click(
							function() {
								postFreelance($('#name').val(), $('#firstname')
										.val(), $('#email').val(), $('#passwd')
										.val())
							});

					$("#get").click(function() {
						getUser($('#user').val(), $('#alias').val())

					});					

					$("#btn_login").click(function() {
						login();
					});

					$("#isentreprise").click(function() {
						$('#inscription').hide()
						$('.proposition_profil').hide();
						$('.entete').hide();
						$('#formulaire_entreprise').show();
						$('#formulaire_freelance').hide();
						$('#freelance').hide();
						$('#inscription_entreprise').show();
						$('.entreprise').show();
						$('#dernieres_offres').hide();
						$('.depot_mission').show();
						$('.nos_offres').show();
						$('#offre').show();
						$('#formulaire_freelance').hide();
					});

					$("#isfreelance").click(function() {
						$('#inscription').hide()
						$('#inscription_entreprise').hide();
						$('#formulaire_entreprise').hide();
						$('#formulaire_freelance').show();
						$('.entete').hide();
						$('#login').hide();
						$('.entreprise').hide();
						$('.depot_mission').hide();
						$('.proposition_profil').show();
						$('#dernieres_offres').hide();
						$('.nos_missions').show();
						$('.nos_offres').show();
						$('#nos_offres').hide();
						$('#proposition_profil').hide();
						$('#proposition_mission').hide();
						$('#offre').show();
					})
					$("#deconnexion").click(function() {
						$('#inscrire').show();
						$('#connexion').show();
						$('#isfreelance').show();
						$('#isentreprise').show();
						$('.entete').show()
						$('#kesako').show()
						$('.entreprise').show()
						$('#notre_motivation').show();
						$('#simplificateur').show();
						$('#nos_offres').show();
						$("#deconnexion").hide();
						$('#formulaire_moncompte').hide();
					})

					$("#listFreelance").click(function() {
						listFreelance();
					})
					$("#listMission").click(function() {
						listAllMission();
					})

					$('#proposition_mission').click(function() {
						$('#proposition_mission').hide();
						$('.proposition_profil').hide();
						$('.entete').hide();
						$('#formulaire_entreprise').show();
						$('#formulaire_freelance').hide();
						$('#freelance').hide();
						$('#inscription_entreprise').show();
						$('.entreprise').show();
						$('#dernieres_offres').hide();
						$('.depot_mission').show();
						$('.nos_offres').show();
						$('#offre').show();
						$('#formulaire_freelance').hide();
					})

					$('#proposition_profil').click(function() {
						$('#proposition_profil').hide();
						$('#inscription_entreprise').hide();
						$('#formulaire_entreprise').hide();
						$('#formulaire_freelance').show();
						$('.entete').hide();
						$('#login').hide();
						$('.entreprise').hide();
						$('.depot_mission').hide();
						$('.proposition_profil').show();
						$('#dernieres_offres').hide();
						$('.nos_missions').show();
						$('.nos_offres').show();
						$('#offre').show();
					});

					$("#modif_perso").click(function() {
						enregistrer();
					})
				});
	</script>
</body>
</html>
